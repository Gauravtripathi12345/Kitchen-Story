@{
    ViewBag.Title = "Home Page";
}

<main>
    <div class="jumbotron jumbotron-fluid bg-dark text-white">
        <div class="container">
            <h1 class="display-3">Welcome to Our Food Management System</h1>
            <p class="lead">Manage your food items, orders, and menus efficiently with our intuitive platform.</p>
        </div>
    </div>

    <div class="row mt-5">
        <section class="col-md-4" aria-labelledby="foodItemsTitle">
            <h2 id="foodItemsTitle">Food Items</h2>
            <p>View our wide range of delicious food items.</p>
        </section>
        <section class="col-md-4" aria-labelledby="ordersTitle">
            <h2 id="ordersTitle">Orders</h2>
            <p>Track and manage your orders with ease.</p>
        </section>
        <section class="col-md-4" aria-labelledby="menusTitle">
            <h2 id="menusTitle">Menus</h2>
            <p>Create and customize menus for your restaurant or event.</p>
        </section>
    </div>
</main>

<style>
    main {
        padding: 20px 0;
    }

    .jumbotron {
        padding: 100px 0;
        text-align: center;
    }

    .display-3 {
        font-size: 3.5rem;
        font-weight: bold;
    }

    .lead {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .btn-outline-light {
        color: #fff;
        border-color: #fff;
    }

        .btn-outline-light:hover {
            color: #000;
            background-color: #fff;
            border-color: #fff;
        }
</style>
